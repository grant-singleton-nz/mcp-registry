{
    "$schema": "https://static.modelcontextprotocol.io/schemas/2025-09-16/server.schema.json",
    "name": "io.github.grant-singleton/test-custom",
    "description": "TEST CUSTOM SERVER - This server should only appear if your custom registry is working correctly",
    "version": "1.0.0",
    "websiteUrl": "https://github.com/grant-singleton-nz/mcp-registry",
    "repository": {
        "url": "https://github.com/grant-singleton-nz/mcp-registry",
        "source": "github"
    },
    "packages": [
        {
            "registryType": "npm",
            "identifier": "@grant-singleton-nz/test-custom-mcp-server",
            "version": "1.0.0",
            "transport": {
                "type": "stdio"
            },
            "runtimeHint": "npx",
            "runtimeArguments": [
                {
                    "type": "positional",
                    "value": "-y"
                },
                {
                    "type": "positional",
                    "value": "@grant-singleton-nz/test-custom-mcp-server"
                }
            ],
            "environmentVariables": [
                {
                    "name": "TEST_API_KEY",
                    "description": "Test API key for demonstration purposes",
                    "isRequired": false,
                    "isSecret": true
                }
            ]
        }
    ]
}
