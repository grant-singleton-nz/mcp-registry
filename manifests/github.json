{
    "$schema": "https://static.modelcontextprotocol.io/schemas/2025-09-16/server.schema.json",
    "name": "io.github.modelcontextprotocol/github",
    "description": "GitHub MCP server for repository operations",
    "version": "1.0.0",
    "vendor": "GitHub",
    "license": "MIT",
    "websiteUrl": "https://github.com/github/github-mcp-server",
    "repository": {
        "url": "https://github.com/modelcontextprotocol/servers",
        "source": "github"
    },
    "packages": [
        {
            "registryType": "npm",
            "identifier": "@modelcontextprotocol/server-github",
            "version": "1.0.0",
            "transport": {
                "type": "stdio"
            },
            "runtimeHint": "npx",
            "runtimeArguments": [
                {
                    "type": "positional",
                    "value": "-y"
                },
                {
                    "type": "positional",
                    "value": "@modelcontextprotocol/server-github"
                }
            ],
            "environmentVariables": [
                {
                    "name": "GITHUB_TOKEN",
                    "description": "GitHub Personal Access Token for API authentication",
                    "isRequired": true,
                    "isSecret": true
                },
                {
                    "name": "GITHUB_ENTERPRISE_URL",
                    "description": "Optional GitHub Enterprise URL",
                    "isRequired": false
                }
            ]
        },
        {
            "registryType": "oci",
            "identifier": "ghcr.io/github/github-mcp-server",
            "version": "latest",
            "transport": {
                "type": "stdio"
            },
            "runtimeHint": "docker",
            "runtimeArguments": [
                {
                    "type": "positional",
                    "value": "run"
                },
                {
                    "type": "positional",
                    "value": "-i"
                },
                {
                    "type": "positional",
                    "value": "--rm"
                },
                {
                    "type": "positional",
                    "value": "ghcr.io/github/github-mcp-server:latest"
                }
            ],
            "environmentVariables": [
                {
                    "name": "GITHUB_TOKEN",
                    "description": "GitHub Personal Access Token for API authentication",
                    "isRequired": true,
                    "isSecret": true
                },
                {
                    "name": "GITHUB_ENTERPRISE_URL",
                    "description": "Optional GitHub Enterprise URL",
                    "isRequired": false
                }
            ]
        }
    ]
}
