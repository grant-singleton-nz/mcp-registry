{
    "$schema": "https://static.modelcontextprotocol.io/schemas/2025-09-16/server.schema.json",
    "name": "io.github.modelcontextprotocol/playwright",
    "description": "Browser automation and testing tools using Playwright",
    "version": "1.0.0",
    "websiteUrl": "https://github.com/modelcontextprotocol/servers",
    "repository": {
        "url": "https://github.com/modelcontextprotocol/servers",
        "source": "github"
    },
    "packages": [
        {
            "registryType": "npm",
            "identifier": "@modelcontextprotocol/server-playwright",
            "version": "1.0.0",
            "transport": {
                "type": "stdio"
            },
            "runtimeHint": "npx",
            "runtimeArguments": [
                {
                    "type": "positional",
                    "value": "-y"
                },
                {
                    "type": "positional",
                    "value": "@modelcontextprotocol/server-playwright"
                }
            ]
        }
    ]
}
